generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id    Int     @default(autoincrement()) @id
  title String  
  description  String
  completed Boolean @default(false)
}

model Contact {
  id    Int     @default(autoincrement()) @id
  name String  
  email  String
  phone  String
  notes  String?
  ownedBy User @relation(fields: [owner], references: [username])
  owner String
}

model User {
  username String @unique
  password String
  contacts Contact[]
}